datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clubId    String           
  name      String
  email     String   @unique
  team      Team?    @relation(fields: [teamId], references: [id])
  teamId    String?  @db.ObjectId
}

model Team {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  code      String
  members   User[]   
  eventId   String
  submissions Submission[]
  score     Int
  goodInterval Int   @default(0)
}

model Question {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  text      String
  answer    Float
  released  Boolean  @default(false)
  submissions Submission[]
}

model Submission {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  teamId    String    @db.ObjectId
  questionId String   @db.ObjectId
  min_value Int
  max_value Int
  createdAt DateTime  @default(now())
  team        Team      @relation(fields: [teamId], references: [id])
  question    Question  @relation(fields: [questionId], references: [id])

  @@unique([teamId, questionId])
}

model Event {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  startTime  DateTime
  endTime    DateTime
  timerDuration Int
  submissionLimit Int
  leaderboardVisibleUntil Int // seconds before end
  isActive Boolean
  createdAt  DateTime  @default(now())
}
